<% if (theme.background.on){ %>
    <script>
        $(document).ready(function() {
            var w, h;
            if(window.innerWidth > 1150) {
               w = 500;
               h = window.innerHeight;
            } else {
                w = window.innerWidth;
                h = window.innerHeight;
            }   
          //  var imgSrc = 'https://unsplash.it/' + w + '/' + h + '/?random';
          //  var imgSrc = 'http://lorempixel.com/' + w + '/' + h;
          // var imgSrc = 'https://source.unsplash.com/random/' + w + 'x' + h;
          var type = <%= theme.background.type %>;
          if(type === 1) {
              var imgSrc = 'https://unsplash.it/' + w + '/' + h + '/?random';
          }
          else if (type === 2) {
              var imgSrc = 'http://lorempixel.com/' + w + '/' + h;
          }
          else if (type === 3) {
              var imgSrc = 'https://source.unsplash.com/random/' + w + 'x' + h;
          }
          else if (type === 4) {
              var backgroundnum = <%= theme.background.background_image %>;
              var imgSrc = "<%- theme.root_url %>/background/bgs-x.jpg".replace(/x/gi, Math.ceil(Math.random() * backgroundnum));
          }
          if(imgSrc) {
            $("#container #mobile-nav").css({"background": 'url(' + imgSrc + ')',"background-size": "cover","background-position": "center"});
            $("#container .left-col").css({"background": 'url(' + imgSrc + ')',"background-size": "cover","background-position": "center"});
          }
        })
    </script>
<% } %>
