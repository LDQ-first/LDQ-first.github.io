.scroll {
    z-index: 999;
    position: fixed;
    top: 61.8%;
    text-align: center;
    line-height: 42px;
    a {
        display: block;
        width: 29px;
        height: 42px;
        font-size: 28px;
        background: rgba(215, 216, 215, .4);
        .fa {
            color: rgba(0, 0, 0, .8);
        }
        &:hover {
            background: rgba(66, 120, 219, .3) !important; 
            .fa {
                color: #FFF;
            }
        }
    }
    a:not(:last-child) {
        border-bottom: 1px solid white;
    }
}

.hide-labels {
    position: fixed;
    left: left-col-width + 34px;
    top: 34px;
    padding: 5px;
    background: #88acdb;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    outline: none;
    font-family: inherit;
    font-size: .9em;
    font-weight: bold;
    color: #666;
    -webkit-appearance: none;
    &:hover {
        background: #FF6A65;
    }
}

#post-nav-button {
    left: left-col-width;
    top: 61.8%;
    a {
        border-bottom-color: transparent;
        background: none;
        cursor: pointer;
        .fa-times {
            display: none;
        }
    }
}

.post-list {
    display: none;
    text-align: left;
    font-size: .9em;
    line-height: 1.3em;
    list-style: decimal;
    li {
        margin: .4em 0 .1em 2em;
        a {
            color: #457eca;
            &:hover {
                color: #e84f51;
                text-decoration: none;
            }
        }
   }
