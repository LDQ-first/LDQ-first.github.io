.archives-wrap{
  position: relative;
  margin: 0 30px;
  padding-right: 1.5em;
  h1 {
    margin-right: 100px;
    text-overflow: ellipsis;
  }
  &:first-child{
    margin-top: 30px;
  }
  &:last-child{
    margin-bottom: 80px;
  }
  .archive-year-wrap{
    line-height: 35px;
    width: 200px;
    position: absolute;
    padding-top: 20px;
    font-size: 1.8em;
  }
  .archive-year-wrap a{
    color: #666;
    font-weight: bold;
    padding-left: 34px;
  }
}

.archives {
  position: relative;
  margin-left: 140px;
  padding-left: 20px;
  border-left: 4px solid rgba(250, 250, 250, 0.5);
  @media screen and (max-width: 1150px) {
    margin-left: 50px;
  }
  .article-info{
    margin: 1em 0;
    border: none;
  }
  .archive-article {
    padding:0.5em 0;
    position: relative;
    &:first-child{
      border-top: 1em;
      padding-top: 20px;
    }
    &:last-child{
      border-bottom: none;
    }

    .dot {
      position: absolute;
      top: 50%;
      width: 14px;
      height: 14px;
      margin-top: -10px;
      margin-left: -29px;
      content: ' ';
      border-radius: 50%;
      &.dot-0 {
        background: #1abc9c;
      }
      &.dot-1 {
        background: #3498db;
      }
      &.dot-2 {
        background: #9b59b6;
      }
      &.dot-3 {
        background: #e67e22;
      }
      &.dot-4 {
        background: #e74c3c;
      }
      &.dot-5 {
        background: #26D411;
      }
      &.dot-6 {
        background: #14D9E4;
      }
      &.dot-7 {
        background: #E773CD;
      }
      &.dot-8 {
        background: #FEDC7E;
      }
    }
  }


  .archive-article-title {
    font-size: (18/16)rem;
    color: #333;
    transition: color 0.3s;
    &:hover{
      color: #2C83CF;
    }
    span{
      display: block;
      color: #a8a8a8;
      font-size: 12px;
      line-height: 14px;
      height: 7px;
      padding-left: 2px;
      &:before{
        display: inline-block;
        content: "â€œ";
        font-family: serif;
        font-size: 30px;
        float: left;
        margin: 4px 4px 0 -12px;
        color: #c8c8c8;
      }
    }
  }
}

.archive-article-inner{
  .archive-article-header{
    position: relative;
  }
  .article-meta{
    //position: relative;
    float: right;
    margin-top: -(5/18)rem
    padding-right 0
    color: #555;
    background: none;
    text-align: right;
    width: auto;
    .article-date{
      time{
        color: #333;
      }
    }
    .archive-article-date, .article-tag-list{
      margin-right: 1em;
      display: -moz-inline-stack;
      display: inline-block;
      vertical-align: middle;
      zoom: 1;
      color: #666;
      font-size: 14px;
    }
    .archive-article-date{
     cursor: default;
     font-size: (14/16)rem;
     margin-bottom: 5px;
     margin-top: -10px;
     time{
      &:before {
        content: "\f073";
        color: #333;
        position: relative;
        margin-right: 10px;
        font: base-font-size FontAwesome;
      }
     }
    }
    .article-category{
      &:before{
        float: left;
        margin-top: 1px;
        left: 15px;
      }
      .article-category-link{
        width: auto;
        max-width: 83px;
        padding-left: 10px;
      }
    }
    .article-tag-list{
      margin-top: 0px;
      &:before{
        left: 15px;
      }
      .article-tag-list-item{
        display: inline-block;
        width: auto;
        max-width: 83px;
        padding-left: 8px;
        font-size: 12px;
      }
    }
  }
}

.archives-wrap {
  background: archives-color;
  padding: 1em 0;
  .archives {
    background: transparent;
  }
}
