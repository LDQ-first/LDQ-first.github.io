#viewer{
    position: fixed;
    z-index: 1000000;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    overflow: hidden;
    min-width: 320px;
}
#viewer-box{
    display: flex;
    width: 100%;
    height: 100%;
    position: relative;
    color: #EEE;
    -webkit-transform: translate3d(-100%, 0, 0 );
    -webkit-transition: -webkit-transform .25s ease-in-out;
    .viewer-box-l{
        background: rgba(20,20,20,0.9);
        width: 80%;
        height: auto;
        flex-grow: 0;
        min-width: 8em;
        max-width: 23em;
        box-shadow: 0 0 10px 4px rgba(0, 0, 0, 0.5);
        .viewer-box-wrap{
            margin: 20px 10px 0px 20px;
        }
        .viewer-title{
            line-height: 32px;
            &:before{
                content: "";
                width: 6px;
                height: 6px;
                border: 1px solid #999;
                -webkit-border-radius: 10px;
                border-radius: 10px;
                background: #eee;
                display: inline-block;
                margin-right: 10px;
            }
        }
        .viewer-div{
            border-bottom: 1px dotted #666;
            padding-bottom: 13px;
            line-height: 20px;
            &:last-child{
                border-bottom: none;
            }
            .switch-friends-link{
                line-height: 20px;
                color: #02abec;
                &:hover {
                    color: #e86507;
                }
            }
        }
    }
    .viewer-box-r{
        flex-grow: 1
        width: auto
        height: auto
        background: rgba(0,0,0,0.3)
        filter: blur(10px);
        margin: -30px;
    }
}
#viewer-box.anm-swipe{
    -webkit-transform:  translate3d(0, 0, 0);
}
.hide{
    display: none;
}
#viewer-box .viewer-list{
    margin: 0;
    padding: 0;
    height: 100%;
    overflow: hidden;
}